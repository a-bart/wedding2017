.about
  position: absolute
  width: 100%
  left: 50%
  top: 50%
  transform: translate(-50%,-50%)
  color: #000
  text-align: center

  &-title
    margin-bottom: 20px
    text-transform: uppercase

    &__image
      margin: 5px 0

      img
        width: 30px

    h2
      display: inline-block
      padding: 5px
      border-bottom: 1px solid rgba(0, 0, 0, 0.2)

  &-container
    display: flex
    justify-content: flex-start

  &-person
    align-self: flex-start
    width: 50%
    padding: 0 15%

    h3
      margin-bottom: 15px
      font-size: 16px
      text-transform: uppercase
      letter-spacing: 0.080em

    img
      border-radius: 50%
      width: 150px
      margin-bottom: 10px

    &__description
      font-size: 14px
      text-align: justify

