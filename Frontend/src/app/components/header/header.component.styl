.menu-wrapper
  position: fixed
  top: 0
  bottom: 0
  z-index: 70
  text-align: center
  margin: auto
  background-color: rgba(71,184,124,0.8)

  .menu
    padding: 0
    position: absolute
    top: 50%
    transform: translateY(-50%)

    li
      margin: 10px
      padding: 5px 0
      color: #000
      text-align: center
      font-size: 16px
      text-transform: uppercase

      a
        // color: #eee
        border: 1px solid transparent
        width: 30px
        height: 30px

        img
          width: 25px

      &.active

        a
          // color: #fff
          border: 1px solid #ccc
          border-radius: 25px
