.story
  position: absolute
  width: 100%
  left: 50%
  top: 50%
  transform: translate(-50%,-50%)
  color: #000
  text-align: center

  &-title
    margin-bottom: 20px
    text-transform: uppercase

    h2
      display: inline-flex
      padding: 5px
      border-bottom: 1px solid rgba(0, 0, 0, 0.2)

  &-container
    display: flex
    justify-content: flex-start
    margin: 0
    height: calc(100vh/3)

  &-img-block
    align-self: flex-start
    width: 20%

    img
      border-radius: 50%
      width: 120px
      margin-bottom: 10px

  &-block
    align-self: flex-start
    position: relative
    width: 50%
    // height: 170px
    height: 100%

    &__title
      position: absolute
      left: 50%
      top: 50%
      transform: translate(-50%,-50%)
      font-size: 18px
      text-transform: uppercase
      letter-spacing: 0.080em
      text-align: left

    &__description
      font-size: 13px
      text-align: justify

  &-block-flip-container
    perspective: 1000px
    width: 50%
    height: 100%

    &:hover
      .flipper
        transform: rotateY(180deg)

    .front, .back
      backface-visibility: hidden
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%

    .flipper
      transition: 0.6s
      transform-style: preserve-3d
      position: relative
      height: 100%

      .front
        z-index: 2
        transform: rotateY(0deg)

        .img
          position: absolute
          left: 50%
          top: 50%
          transform: translate(-50%,-50%)
          height: 80%

          img
            border-radius: 50%
            height: 100%

      .back
        transform: rotateY(180deg)
        // background-image: url('../../assets/images/pattern/ca3b529b.png')
        background-color: #1995ad
        // background-color: #2d4262

        &__content
          position: absolute
          left: 50%
          top: 50%
          transform: translate(-50%,-50%)
          width: 100%
          padding: 10px
          color: #fff
          font-size: 14px
          letter-spacing: 0.025em


