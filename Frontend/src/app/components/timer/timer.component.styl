.timer
  position: absolute
  width: 100%
  left: 50%
  top: 50%
  transform: translate(-50%,-50%)
  color: #fff
  text-align: center

  &-title
    margin-bottom: 20px
    text-transform: uppercase

    h2
      display: inline-block
      padding: 5px
      border-bottom: 1px solid rgba(255, 255, 255, 0.3)

  &-block
    position: relative
    display: inline-block
    min-width: 70px
    padding: 10px
    margin: 5px
    background-color: rgba(255, 255, 255, 0.6)
    color: #000
    font-size: 33px
    font-weight: 600
    border-radius: 50px

    span
      position: absolute
      bottom: -22px
      left: 0
      right: 0
      color: #fff
      font-size: 15px
      letter-spacing: 0.055em
